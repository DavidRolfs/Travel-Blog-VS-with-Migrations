@{
    ViewData["Title"] = "Travel Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<TravelBlog.Models.Location>

<h2>To Do List</h2>
<h4>@Html.DisplayNameFor(model => model.Name)</h4>
<ul>
    @foreach (var listLocation in Model)
    {
        <li>@Html.DisplayFor(model => listLocation.Name), @Html.DisplayFor(model => listLocation.Country) | @Html.ActionLink("Details", "Details", new { id = listLocation.LocationId }) | @Html.ActionLink("Edit", "Edit", new { id = listLocation.LocationId }) | @Html.ActionLink("Delete", "Delete", new { id = listLocation.LocationId })</li>
    }
</ul>
<p>@Html.ActionLink("Create a Location", "Create")</p>